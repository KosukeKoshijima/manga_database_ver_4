<div class="page-header">
  <h1>
    Mangas
    <a href="/mangas/new" class="btn btn-lg btn-success">New Manga</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>User</th>
        <th>Title</th>
        <th>Image</th>
        <th>Year</th>
        <th>Author</th>
        <th>Character</th>
        <th>Magazine</th>

        <th>Actions</th>
      </tr>

      <% @mangas.each do |manga| %>
      <tr>

        <td><%= manga.user_id %></td>
        <td><%= manga.title %></td>
        <td><%= manga.image %></td>
        <td><%= manga.year %></td>
        <td><%= manga.author %></td>
        <td><%= manga.character %></td>
        <td><%= manga.magazine %></td>

        <td>
          <a href="/mangas/<%= manga.id %>" class="btn btn-primary">Show</a>
          <a href="/mangas/<%= manga.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_manga/<%= manga.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
